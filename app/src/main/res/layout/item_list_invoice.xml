<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout.Item4">

    <TextView
        android:id="@+id/mainTextView"
        style="@style/TextView.TitleLeft"
        android:layout_toLeftOf="@+id/delImageView"
        android:layout_toStartOf="@+id/delImageView" />

    <ImageView
        android:id="@+id/delImageView"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/selector_color_white_add"
        android:scaleType="center"
        android:src="@mipmap/ic_del" />

    <View
        style="@style/View.Line"
        android:layout_below="@+id/mainTextView" />

</RelativeLayout>