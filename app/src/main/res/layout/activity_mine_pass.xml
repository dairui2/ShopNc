<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout.Login">

    <include
        style="@style/Include.Wrap"
        layout="@layout/include_toolbar" />

    <RelativeLayout style="@style/Layout.LinearHor">

        <EditText
            android:id="@+id/mobileEditText"
            style="@style/EditText.Username"
            android:layout_marginTop="48dip"
            android:enabled="false"
            android:hint="请输入手机号码"
            android:inputType="phone" />

        <TextView
            android:id="@+id/getTextView"
            style="@style/TextView.Verify"
            android:layout_alignBottom="@+id/mobileEditText"
            android:layout_alignEnd="@+id/mobileEditText"
            android:layout_alignRight="@+id/mobileEditText"
            android:layout_marginBottom="10dip" />

    </RelativeLayout>

    <EditText
        android:id="@+id/verifyEditText"
        style="@style/EditText.Username"
        android:hint="请输入手机验证码" />

    <EditText
        android:id="@+id/passwordEditText"
        style="@style/EditText.Password"
        android:hint="请输入新密码" />

    <EditText
        android:id="@+id/passwordConfirmEditText"
        style="@style/EditText.Password"
        android:hint="请确认新密码" />

    <TextView
        android:id="@+id/confirmTextView"
        style="@style/TextView.Login"
        android:text="确认" />

</LinearLayout>