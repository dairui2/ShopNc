<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout.Linear">

    <include
        style="@style/Include.Wrap"
        layout="@layout/include_toolbar" />

    <RelativeLayout
        style="@style/Layout.HeightWrap"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:paddingBottom="16dip"
        android:paddingTop="8dip">

        <ImageView
            android:id="@+id/moneyImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_property_recharge_card" />

        <TextView
            android:id="@+id/moneyTextView"
            style="@style/TextView.White"
            android:layout_below="@+id/moneyImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dip"
            android:textSize="18sp" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/mainTabLayout"
        style="@style/Layout.Tab" />

    <View style="@style/View.Line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/mainViewPager"
        style="@style/ViewPager.Main" />

</LinearLayout>