<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout.Linear">

    <include
        android:id="@+id/toolbarInclude"
        style="@style/Include.Wrap"
        layout="@layout/include_toolbar" />

    <LinearLayout
        style="@style/Layout.Tool"
        android:padding="0dip">

        <TextView
            style="@style/TextView.ToolTitle"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:text="名称" />

        <View style="@style/View.LineHor" />

        <EditText
            android:id="@+id/nameEditText"
            style="@style/EditText.EditInfo"
            android:gravity="center_vertical"
            android:hint="圈子名称" />

    </LinearLayout>

    <View style="@style/View.Line" />

    <LinearLayout
        style="@style/Layout.Tool"
        android:padding="0dip">

        <TextView
            style="@style/TextView.ToolTitle"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:text="标签" />

        <View style="@style/View.LineHor" />

        <EditText
            android:id="@+id/tagEditText"
            style="@style/EditText.EditInfo"
            android:gravity="center_vertical"
            android:hint="圈子标签" />

    </LinearLayout>

    <View style="@style/View.Line" />

    <LinearLayout
        style="@style/Layout.Tool"
        android:layout_height="80dip"
        android:padding="0dip">

        <TextView
            style="@style/TextView.ToolTitle"
            android:layout_height="80dip"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:text="理由" />

        <View style="@style/View.LineHor" />

        <EditText
            android:id="@+id/pursuerEditText"
            style="@style/EditText.EditInfo"
            android:layout_height="80dip"
            android:gravity="center_vertical"
            android:hint="申请理由"
            android:inputType="none" />

    </LinearLayout>

    <View style="@style/View.Line" />

    <LinearLayout
        style="@style/Layout.Tool"
        android:layout_height="80dip"
        android:padding="0dip">

        <TextView
            style="@style/TextView.ToolTitle"
            android:layout_height="80dip"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:text="简介" />

        <View style="@style/View.LineHor" />

        <EditText
            android:id="@+id/descEditText"
            style="@style/EditText.EditInfo"
            android:layout_height="80dip"
            android:gravity="center_vertical"
            android:hint="圈子简介"
            android:inputType="none" />

    </LinearLayout>

    <View
        style="@style/View.Line"
        android:layout_height="12dip" />

    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        style="@style/Layout.Tool"
        android:layout_height="wrap_content"
        android:paddingBottom="12dip"
        android:paddingTop="12dip">

        <ImageView
            android:id="@+id/mainImageView"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:src="@mipmap/ic_add_img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_toEndOf="@+id/mainImageView"
            android:layout_toRightOf="@+id/mainImageView"
            android:gravity="center_vertical"
            android:padding="16dip"
            android:text="点击添加图片"
            android:textColor="@color/grey" />

    </RelativeLayout>

    <View
        style="@style/View.Line"
        android:layout_height="12dip" />

    <TextView
        android:id="@+id/createTextView"
        style="@style/TextView.Button1"
        android:layout_margin="0dip"
        android:text="创建圈子" />

</LinearLayout>