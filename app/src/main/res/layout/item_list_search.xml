<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRelativeLayout"
    style="@style/Layout.HeightWrap"
    android:background="@drawable/selector_color_white_add">

    <TextView
        android:id="@+id/titleTextView"
        style="@style/TextView.ItemSearchTitle"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/typeTextView"
        android:layout_toStartOf="@+id/typeTextView" />

    <TextView
        android:id="@+id/typeTextView"
        style="@style/TextView.ItemSearchTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <View
        style="@style/View.Line"
        android:layout_below="@+id/titleTextView" />

</RelativeLayout>