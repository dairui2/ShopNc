<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRelativeLayout"
    style="@style/Layout.Item7">

    <TextView
        android:id="@+id/timeTextView"
        style="@style/TextView.ItemAddressName"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/moneyTextView"
        android:layout_toStartOf="@+id/moneyTextView"
        android:textColor="@color/greyAdd" />

    <TextView
        android:id="@+id/contentTextView"
        style="@style/TextView.ItemAddressName"
        android:layout_below="@+id/timeTextView"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/moneyTextView"
        style="@style/TextView.ItemPricePromotion"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="18sp" />

    <View
        style="@style/View.Line"
        android:layout_below="@+id/contentTextView"
        android:layout_marginTop="8dip" />

</RelativeLayout>